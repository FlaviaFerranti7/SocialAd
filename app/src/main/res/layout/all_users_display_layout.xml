<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/distance">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users_profile_image"
        android:layout_width="@dimen/login_logo"
        android:layout_height="@dimen/login_logo"
        android:src="@drawable/profile_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/box_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Full name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Status"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>